<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background="@drawable/common_gradient"
    tools:context=".MoreSettings.ActivityChangePassword">

        <LinearLayout
            android:id="@+id/layoutHeaderSCEvents"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10ssp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ivBack"
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:src="@drawable/arrow_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10ssp"
                android:text="Change Password "
                android:textColor="@color/black"
                android:textSize="@dimen/_20ssp" />
        </LinearLayout>


        <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_100ssp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_30ssp"
            android:src="@drawable/splash_screen_logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_20ssp"
            android:text="Current Password"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/background_shape"
            android:hint="Current Password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:padding="@dimen/_10ssp"
            android:textColor="@color/black2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:text="Enter New Password"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:inputType="textPassword"
            android:background="@drawable/background_shape"
            android:hint="Enter New Password"
            android:imeOptions="actionNext"
            android:padding="@dimen/_10ssp"
            android:textColor="@color/black2" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10ssp"
            android:layout_marginTop="@dimen/_10ssp"
            android:text="Confirm Password"
            android:textColor="@color/black"
            android:textSize="@dimen/_15ssp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/etConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:background="@drawable/background_shape"
            android:hint="Confirm Password"
            android:imeOptions="actionNext"
            android:inputType="textPassword"
            android:padding="@dimen/_10ssp"
            android:textColor="@color/black2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20ssp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/btnDone"
                android:layout_width="@dimen/_60ssp"
                android:layout_height="@dimen/_30ssp"
                android:backgroundTint="#5669FF"
                app:cardCornerRadius="@dimen/_3ssp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Done"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>
