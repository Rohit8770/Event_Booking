<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".HomeScreen.ActivityEventinfo">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-29sp"
            android:elevation="@dimen/_10ssp"
            app:cardCornerRadius="@dimen/_27ssp">
            <ImageView
                android:id="@+id/textImg"
                android:layout_width="match_parent"
                android:layout_height="272dp"
                android:scaleType="fitXY"
                android:src="@drawable/party" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30ssp">
                <ImageView
                    android:id="@+id/ivProfileBack"
                    android:layout_width="@dimen/_30ssp"
                    android:layout_height="@dimen/_30ssp"
                    android:src="@drawable/arrow_back"
                    app:tint="@color/white" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:text="Event Information"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_20ssp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/txName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_25ssp"
                    android:layout_marginTop="@dimen/_7ssp"
                    android:text="DJ Party Event"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_28ssp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_25ssp"
                    android:layout_marginTop="@dimen/_20ssp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_40ssp"
                        android:layout_height="@dimen/_35ssp"
                        android:layout_gravity="center"
                        android:backgroundTint="#D0D5F4"
                        android:elevation="@dimen/_10ssp"
                        app:cardCornerRadius="@dimen/_10ssp">

                        <ImageView
                            android:layout_width="@dimen/_20ssp"
                            android:layout_height="@dimen/_40ssp"
                            android:layout_gravity="center"
                            android:src="@drawable/calender"
                            app:tint="#6473ED" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txCalander"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15ssp"
                            android:fontFamily="@font/sofia_pro_medium"
                            android:gravity="center"
                            android:text="31 Dec 2023"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15ssp" />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txStartTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15ssp"
                            android:fontFamily="@font/sofia_pro_medium"
                            android:text="4:00 AM"
                            android:textSize="@dimen/_11ssp" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_5ssp"
                                android:fontFamily="@font/sofia_pro_medium"
                                android:text="to"
                                android:textSize="@dimen/_11ssp" />
                        <TextView
                            android:id="@+id/txEndTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_7ssp"
                            android:fontFamily="@font/sofia_pro_medium"
                            android:text="7:00 PM"
                            android:textSize="@dimen/_11ssp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_25ssp"
                    android:layout_marginTop="@dimen/_20ssp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_40ssp"
                        android:layout_height="@dimen/_35ssp"
                        android:layout_gravity="center"
                        android:backgroundTint="#D0D5F4"
                        android:elevation="@dimen/_10ssp"
                        app:cardCornerRadius="@dimen/_10ssp">

                        <ImageView
                            android:layout_width="@dimen/_20ssp"
                            android:layout_height="@dimen/_40ssp"
                            android:layout_gravity="center"
                            android:src="@drawable/location"
                            app:tint="#6473ED" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15ssp"
                            android:fontFamily="@font/sofia_pro_medium"
                            android:text="Rewind The Disk"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15ssp" />

                        <TextView
                            android:id="@+id/txtLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15ssp"
                            android:fontFamily="@font/sofia_pro_medium"
                            android:text="Himalaya Mall, Ahmedabad"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_60ssp"
                    android:layout_marginLeft="@dimen/_10ssp"
                    android:layout_marginTop="@dimen/_40ssp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_50ssp"
                        android:layout_height="@dimen/_50ssp"
                        android:layout_gravity="center"
                        android:backgroundTint="@color/lightGrey"
                        android:elevation="@dimen/_10ssp"
                        app:cardCornerRadius="@dimen/_10ssp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:scaleType="fitXY"
                            android:src="@drawable/person_image" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtVenue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15ssp"
                            android:fontFamily="@font/sofia_pro_medium"
                            android:text="Paras Dudharejiya"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_15ssp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_15ssp"
                            android:fontFamily="@font/sofia_pro_medium"
                            android:text="Organiser"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11ssp" />
                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_50ssp"
                        android:layout_height="@dimen/_30ssp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_20ssp"
                        android:backgroundTint="#D0D5F4"
                        android:elevation="@dimen/_10ssp"
                        app:cardCornerRadius="@dimen/_5ssp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:text="Follow"
                            android:textColor="#5B6ADA"
                            android:textSize="@dimen/_10ssp" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15ssp"
                    android:layout_marginTop="@dimen/_25ssp"
                    android:fontFamily="@font/sofia_pro_semi_bold"
                    android:text="About Event"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_17ssp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/txAbout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15ssp"
                    android:fontFamily="@font/sofia_pro_semi_bold"
                    android:text="About Event"
                    android:textSize="@dimen/_13ssp" />

                <!--<TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_15ssp"
                    android:fontFamily="@font/sofia_pro_semi_bold"
                    android:text="About Event"
                    android:textSize="@dimen/_13ssp" />-->

                <LinearLayout
                    android:id="@+id/btnBook"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="29sp"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="@dimen/_50ssp"
                        android:backgroundTint="#5669FF"
                        app:cardCornerRadius="@dimen/_10ssp">

                        <LinearLayout
                            android:id="@+id/btnBuy"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10ssp"
                                android:gravity="center"
                                android:text="Buy Ticket"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_15ssp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_10ssp"
                                android:gravity="center"
                                android:text="@string/Rs"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_15ssp" />

                            <TextView
                                android:id="@+id/txtPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="100"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_15ssp" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/_20ssp"
                                android:src="@drawable/arrow_icon" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
