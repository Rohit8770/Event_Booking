<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/common_gradient"
    tools:context=".MoreSettings.Activity_MyProfile">

    <LinearLayout
        android:id="@+id/layoutHeaderProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10ssp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivProfileBack"
            android:layout_width="@dimen/_25ssp"
            android:layout_height="@dimen/_25ssp"
            android:src="@drawable/arrow_back"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"
            android:layout_marginLeft="@dimen/_10ssp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutUserPhoto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutHeaderProfile"
        android:layout_marginTop="@dimen/_40ssp"
        android:gravity="center"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgUserProfile"
            android:layout_width="@dimen/_100ssp"
            android:layout_height="@dimen/_100ssp"
            android:layout_marginLeft="@dimen/_30ssp"
            android:src="@drawable/person_image"
            app:civ_border_width="@dimen/_1ssp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civProfileCamera"
            android:layout_width="@dimen/_30ssp"
            android:layout_height="@dimen/_30ssp"
            android:layout_marginLeft="-35dp"
            android:layout_marginTop="@dimen/_30ssp"
            android:src="@drawable/camera"
            app:civ_border_width="1dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/layoutUserPhoto"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layoutProfileName"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40ssp"
            android:layout_below="@id/layoutUserPhoto"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_20ssp"
            android:background="@drawable/shape"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5">
            <ImageView
                android:layout_width="@dimen/_20ssp"
                android:layout_height="@dimen/_20ssp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10ssp"
                android:src="@drawable/user_icon" />
            </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="4">
            <EditText
                android:id="@+id/etSignUpName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:hint="Full Name"
                android:inputType="text"
                android:textSize="@dimen/_15ssp" />
                </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/imgUserName11"
                    android:layout_width="43dp"
                    android:layout_height="34dp"
                    android:src="@drawable/edit_profile_imge" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutProfileNumber"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40ssp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10ssp"
            android:background="@drawable/shape"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10ssp">
            <ImageView
                android:layout_width="@dimen/_20ssp"
                android:layout_height="@dimen/_20ssp"
                android:layout_gravity="center"
                android:src="@drawable/phone_call_logo" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4.5">
            <EditText
                android:id="@+id/etSignUpNumber"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10ssp"
                android:background="@null"
                android:hint="Contact"
                android:inputType="number"
                android:textSize="@dimen/_15ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="end"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/imgUserName122"
                    android:layout_width="43dp"
                    android:layout_marginLeft="@dimen/_5ssp"
                    android:layout_height="34dp"
                    android:src="@drawable/edit_profile_imge" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutProfileEmail"
            android:layout_width="@dimen/_250sdp"
            android:layout_height="@dimen/_40ssp"
            android:layout_below="@id/layoutProfileName"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_10ssp"
            android:background="@drawable/shape"
            android:orientation="horizontal"
            android:weightSum="5">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10ssp">
            <ImageView
                android:layout_width="@dimen/_20ssp"
                android:layout_height="@dimen/_20ssp"
                android:layout_gravity="center"
                android:src="@drawable/mail_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="4.5">
            <EditText
                android:id="@+id/etProfileEditEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@null"
                android:layout_marginLeft="@dimen/_10ssp"
                android:hint="abc@gmail.com"
                android:inputType="textEmailAddress"
                android:textSize="@dimen/_15ssp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:gravity="end">

                <ImageView
                    android:id="@+id/imgEdit"
                    android:layout_width="43dp"
                    android:layout_height="34dp"
                    android:src="@drawable/edit_profile_imge" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/layoutProfileEmail"
            android:layout_marginTop="@dimen/_20ssp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvProfileEditButton"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_30ssp"
                android:backgroundTint="#5669FF"
                android:elevation="@dimen/_20ssp"
                app:cardCornerRadius="@dimen/_7ssp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Edit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp" />

                <!--      <de.hdodenhof.circleimageview.CircleImageView
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_gravity="center"
                          android:layout_marginLeft="@dimen/_70ssp"
                          android:src="@drawable/arrow_icon"
                          app:civ_border_width="@dimen/_1ssp" />-->

            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>