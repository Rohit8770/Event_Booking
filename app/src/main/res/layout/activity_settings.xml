<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/main_layout"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MoreSettings.Activity_Settings">

    <LinearLayout
        android:id="@+id/layoutHeaderSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10ssp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivHelpAndFAQsBack"
            android:layout_width="@dimen/_30ssp"
            android:layout_height="@dimen/_30ssp"
            android:src="@drawable/arrow_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10ssp"
            android:text="Settings"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp" />
    </LinearLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DISPLAY"
        android:layout_marginTop="@dimen/_19ssp"
        android:layout_marginLeft="@dimen/_10ssp"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:fontFamily="@font/sofia_pro_semi_bold"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5ssp"
        android:backgroundTint="@color/ss_light_grey"
        app:cardCornerRadius="@dimen/_5ssp"
        android:layout_height="@dimen/_50ssp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_11ssp"
            android:layout_marginLeft="@dimen/_5ssp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notification"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"
                android:fontFamily="@font/sofia_pro_semi_bold"/>
       <androidx.appcompat.widget.SwitchCompat
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="end"
           android:layout_marginRight="@dimen/_7ssp"
           />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5ssp"
        android:backgroundTint="@color/ss_light_grey"
        app:cardCornerRadius="@dimen/_5ssp"
        android:layout_height="@dimen/_50ssp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_11ssp"
            android:layout_marginLeft="@dimen/_5ssp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Display sound"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"
                android:fontFamily="@font/sofia_pro_semi_bold"/>
            <androidx.appcompat.widget.SwitchCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/_7ssp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_5ssp"
        android:backgroundTint="@color/ss_light_grey"
        app:cardCornerRadius="@dimen/_5ssp"
        android:layout_height="@dimen/_50ssp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_11ssp"
            android:layout_marginLeft="@dimen/_5ssp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lock screen"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"
                android:fontFamily="@font/sofia_pro_semi_bold"/>
            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/SwitchLock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginRight="@dimen/_7ssp"
                />
        </LinearLayout>
    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ABOUT"
        android:layout_marginTop="@dimen/_19ssp"
        android:layout_marginLeft="@dimen/_10ssp"
        android:textColor="@color/black"
        android:textSize="@dimen/_15ssp"
        android:fontFamily="@font/sofia_pro_semi_bold"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_7ssp"
        android:backgroundTint="@color/ss_light_grey"
        android:layout_marginRight="@dimen/_7ssp"
        android:layout_marginTop="@dimen/_12ssp"
        app:cardCornerRadius="@dimen/_5ssp"
        android:layout_height="@dimen/_50ssp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5ssp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Application Name"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"
                android:fontFamily="@font/sofia_pro_semi_bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ASTHETIC EVENTS"
                android:layout_marginTop="@dimen/_5ssp"
                android:textSize="@dimen/_13ssp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="@dimen/_7ssp"
        android:layout_marginTop="@dimen/_11ssp"
        app:cardCornerRadius="@dimen/_5ssp"
        android:backgroundTint="@color/ss_light_grey"
        android:layout_marginRight="@dimen/_7ssp"
        android:layout_height="@dimen/_50ssp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5ssp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Application version"
                android:textColor="@color/black"
                android:textSize="@dimen/_18ssp"
                android:fontFamily="@font/sofia_pro_semi_bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="v3.3"
                android:layout_marginTop="@dimen/_5ssp"
                android:textSize="@dimen/_14ssp"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
