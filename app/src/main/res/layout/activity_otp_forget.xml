<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeScreen.ActivityOtpForget">


        <LinearLayout
            android:id="@+id/arrowBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btnBack1"
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:layout_margin="@dimen/_10ssp"
                android:src="@drawable/arrow_back" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/arrowBack"
            android:layout_marginTop="@dimen/_30ssp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20ssp"
                android:text="Verification Code"
                android:textColor="@color/black"
                android:textSize="@dimen/_25ssp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgotPassword"
            android:layout_marginTop="@dimen/_10ssp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20ssp"
                android:text="Weâ€™ve send you the verification"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20ssp"
                android:text=" code on +91 9081463454."
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/ll111"
        android:layout_width="match_parent"
        android:padding="6sp"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_40ssp"
        android:layout_height="@dimen/_64ssp"
        android:gravity="center"
        android:layout_below="@+id/text1">

        <androidx.cardview.widget.CardView
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_marginTop="@dimen/_2ssp"
            app:cardCornerRadius="10sp"
            android:elevation="10sp">
            <EditText
                android:id="@+id/otpEditText1"
                android:layout_width="match_parent"
                android:background="@null"
                android:maxLength="1"
                tools:ignore="InvalidId"
                android:inputType="number"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:digits="1234567890"
                android:textSize="@dimen/_25ssp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="60sp"
            android:layout_marginTop="@dimen/_2ssp"
            android:layout_height="65sp"
            android:layout_marginLeft="@dimen/_3ssp"
            app:cardCornerRadius="10sp"
            android:elevation="10sp">
            <EditText
                android:id="@+id/otpEditText2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:digits="1234567890"
                android:background="@null"
                android:imeOptions="actionNext"
                android:maxLength="1"
                tools:ignore="InvalidId"
                android:inputType="number"
                android:gravity="center"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_25ssp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="60sp"
            android:layout_marginTop="@dimen/_2ssp"
            android:layout_height="65sp"
            android:layout_marginLeft="@dimen/_3ssp"
            app:cardCornerRadius="10sp"
            android:elevation="10sp">
            <EditText
                android:id="@+id/otpEditText3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                tools:ignore="InvalidId"
                android:inputType="number"
                android:maxLength="1"
                android:gravity="center"
                android:imeOptions="actionNext"
                android:textColor="@color/colorAccent"
                android:digits="1234567890"
                android:textSize="@dimen/_25ssp" />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_marginTop="@dimen/_2ssp"
            android:layout_marginLeft="@dimen/_3ssp"
            app:cardCornerRadius="10sp"
            android:elevation="10sp">
            <EditText
                android:id="@+id/otpEditText4"
                android:digits="1234567890"
                android:layout_width="match_parent"
                android:background="@null"
                android:maxLength="1"
                tools:ignore="InvalidId"
                android:inputType="number"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_25ssp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_marginTop="@dimen/_2ssp"
            android:layout_marginLeft="@dimen/_3ssp"
            app:cardCornerRadius="10sp"
            android:elevation="10sp">
            <EditText
                android:id="@+id/otpEditText5"
                android:digits="1234567890"
                android:layout_width="match_parent"
                android:background="@null"
                android:maxLength="1"
                tools:ignore="InvalidId"
                android:inputType="number"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_25ssp"/>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="60sp"
            android:layout_height="65sp"
            android:layout_marginTop="@dimen/_2ssp"
            android:layout_marginLeft="@dimen/_3ssp"
            app:cardCornerRadius="10sp"
            android:elevation="10sp">
            <EditText
                android:id="@+id/otpEditText6"
                android:digits="1234567890"
                android:layout_width="match_parent"
                android:background="@null"
                android:maxLength="1"
                tools:ignore="InvalidId"
                android:inputType="number"
                android:gravity="center"
                android:imeOptions="actionDone"
                android:layout_height="match_parent"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_25ssp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ll111"
            android:layout_marginTop="@dimen/_20ssp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/b2"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_40ssp"
                android:backgroundTint="#5669FF"
                android:elevation="@dimen/_20ssp"
                app:cardCornerRadius="@dimen/_7ssp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Done"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/_70ssp"
                    android:src="@drawable/arrow_icon"
                    app:civ_border_width="@dimen/_1ssp" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </RelativeLayout>
