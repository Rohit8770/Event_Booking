<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPassword.Activity_ForgotPassword">

    <LinearLayout
        android:id="@+id/arrowBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivForgotPasswordUpBack"
            android:layout_width="@dimen/_30ssp"
            android:layout_height="@dimen/_30ssp"
            android:layout_margin="@dimen/_10ssp"
            android:src="@drawable/arrow_back" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/forgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/arrowBack"
        android:layout_marginTop="@dimen/_30ssp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20ssp"
            android:text="Forgot Password"
            android:textColor="@color/black"
            android:textSize="@dimen/_25ssp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/forgotPassword"
        android:layout_marginTop="@dimen/_10ssp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20ssp"
            android:text="Please enter your email address to"
            android:textSize="@dimen/_12ssp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_20ssp"
            android:text="request to password reset."
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/emailBox"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_40ssp"
        android:layout_below="@id/text1"
        android:layout_marginLeft="@dimen/_30ssp"
        android:layout_marginTop="@dimen/_30ssp"
        android:background="@drawable/shape">

        <ImageView
            android:layout_width="@dimen/_20ssp"
            android:layout_height="@dimen/_20ssp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10ssp"
            android:src="@drawable/mail_icon" />

        <EditText
            android:id="@+id/etSignUpEmail"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10ssp"
            android:background="@null"
            android:hint="abc@gmail.com"
            android:inputType="textEmailAddress"
            android:textSize="@dimen/_15ssp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailBox"
        android:layout_marginTop="@dimen/_40ssp"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/cvForgotPasswordButton"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_40ssp"
            android:backgroundTint="#5669FF"
            android:elevation="@dimen/_20ssp"
            app:cardCornerRadius="@dimen/_7ssp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_70ssp"
                android:src="@drawable/arrow_icon"
                app:civ_border_width="@dimen/_1ssp" />

        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>