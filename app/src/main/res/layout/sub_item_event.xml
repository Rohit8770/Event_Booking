<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- <androidx.cardview.widget.CardView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_margin="@dimen/_4ssp"
             app:cardCornerRadius="@dimen/_7ssp"
             app:cardElevation="@dimen/_20ssp">-->

        <ImageView
            android:layout_width="103dp"
            android:layout_height="72dp"
            android:layout_marginTop="@dimen/_25ssp"
            android:src="@drawable/rating" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">


            <LinearLayout
                android:layout_width="@dimen/_160sdp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5ssp"
                android:layout_weight="2"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/_20ssp"
                        android:layout_height="@dimen/_15ssp"
                        android:src="@drawable/green_tick"
                        app:tint="@color/green" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_55ssp"
                        android:layout_height="@dimen/_15ssp"
                        android:layout_marginLeft="@dimen/_5ssp"
                        android:backgroundTint="@color/light_orange"
                        app:cardCornerRadius="@dimen/_5ssp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_5ssp"
                            android:text="BestEvent"
                            android:textColor="@color/app_icon_logo_background"
                            android:textSize="@dimen/_10ssp"
                            android:textStyle="bold" />

                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <TextView
                    android:id="@+id/txtEventName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_5ssp"
                    android:layout_marginTop="@dimen/_3ssp"
                    android:fontFamily="@font/sofia_pro_semi_bold"
                    android:text="DJ Party Event"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_15ssp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_7ssp"
                    android:layout_marginTop="@dimen/_20ssp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="@string/Rs"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp" />

                    <TextView
                        android:id="@+id/txPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Money"
                        android:textColor="@color/black"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_7ssp"
                    android:layout_marginTop="@dimen/_2ssp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2.00 PM"
                        android:textColor="#5669FF"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txDate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Apr 28  "
                        android:textColor="#5669FF"
                        android:textStyle="bold" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_3ssp"
                    android:layout_marginTop="@dimen/_1ssp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/location"
                        app:tint="@color/translucent" />

                    <TextView
                        android:id="@+id/txLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Juhu Beach - West Mumbai" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_110sdp"
                    app:cardCornerRadius="@dimen/_10ssp">

                    <ImageView
                        android:id="@+id/SubImg"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:scaleType="fitXY"
                        android:src="@drawable/party" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_5ssp"
            android:layout_marginTop="@dimen/_150sdp"
            android:layout_marginRight="@dimen/_5ssp"
            android:fontFamily="@font/sofia_pro_regular"
            android:gravity="center"
            android:text="--------------------------------------------------" />

        <!-- </androidx.cardview.widget.CardView>-->

    </RelativeLayout>

</RelativeLayout>