<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100ssp"
            android:layout_margin="@dimen/_4ssp"
            app:cardCornerRadius="@dimen/_7ssp"
            app:cardElevation="@dimen/_20ssp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_100ssp"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5ssp"
                        app:cardCornerRadius="@dimen/_7ssp">

                        <ImageView
                            android:id="@+id/SubImg"
                            android:layout_width="match_parent"
                            android:layout_height="120dp"
                            android:scaleType="fitXY"
                            android:src="@drawable/party" />
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtEventName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5ssp"
                        android:text="DJ Party Event"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15ssp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/_5ssp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Apr 28  "
                            android:textColor="#5669FF"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/txTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2.00 PM"
                            android:textColor="#5669FF"
                            android:textStyle="bold" />

                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_1ssp"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/location"
                            app:tint="@color/translucent" />

                        <TextView
                            android:id="@+id/txLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Juhu Beach - West Mumbai" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>