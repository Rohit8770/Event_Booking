<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HomeScreen.ActivityPhoneForgetPassword">

        <LinearLayout
            android:id="@+id/arrowBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
            android:id="@+id/ivForgotPasswordUpBack"
                android:layout_width="@dimen/_30ssp"
                android:layout_height="@dimen/_30ssp"
                android:layout_margin="@dimen/_10ssp"
                android:src="@drawable/arrow_back" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/forgotPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/arrowBack"
            android:layout_marginTop="@dimen/_30ssp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20ssp"
                android:text="Forgot Password"
                android:textColor="@color/black"
                android:textSize="@dimen/_25ssp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/forgotPassword"
            android:layout_marginTop="@dimen/_10ssp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20ssp"
                android:text="Please enter your mobile number to"
                android:textSize="@dimen/_12ssp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20ssp"
                android:text="request to password reset."
                android:textSize="@dimen/_12ssp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/emailBox"
            android:layout_width="@dimen/_260sdp"
            android:layout_height="@dimen/_50ssp"
            android:layout_marginLeft="27sp"
            android:layout_marginTop="@dimen/_25ssp"
            android:elevation="5dp"
            android:layout_below="@id/text1"
            android:orientation="horizontal"
            android:background="@drawable/background_shape">

            <com.hbb20.CountryCodePicker
                android:id="@+id/ccp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_9ssp"/>

            <EditText
                android:id="@+id/t1"
                android:background="@null"
                android:inputType="number"
                android:digits="1234567890"
                android:layout_width="@dimen/_140sdp"
                android:layout_marginTop="@dimen/_11ssp"
                android:layout_height="@dimen/_28ssp"
                android:textSize="16sp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/emailBox"
            android:layout_marginTop="@dimen/_40ssp"
            android:gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/b1"
                android:layout_width="@dimen/_150sdp"
                android:layout_height="@dimen/_40ssp"
                android:backgroundTint="#5669FF"
                android:layout_gravity="center"
                android:elevation="@dimen/_20ssp"
                app:cardCornerRadius="@dimen/_7ssp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Send"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15ssp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginRight="@dimen/_10ssp"
                    android:src="@drawable/arrow_icon"
                    app:civ_border_width="@dimen/_1ssp" />

            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </RelativeLayout>


